// def key3 = "${VALUE3}"

/* Pipeline */
pipeline {
  agent any
  options {
    timeout(time: 20, unit: 'MINUTES')
  }
  stages {
    stage("Build Image") {
      steps {
        echo "Build Image..."
        sh 'oc process -f templates/build-castor.yml | oc apply -f -'
        sh 'oc start-build castor --wait'
      }
    }  
    stage("Deploy Pod") {
      steps {
        echo "Deploy Pod"
        sh 'oc process -f templates/deploy-castor.yml | oc apply -f -'
      }
    }
  }
}